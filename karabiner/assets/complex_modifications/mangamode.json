{
  "title": "manga mode",
  "rules": [
    {
      "description": "manga paging ",
      "manipulators": [
        {
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "com.ToWatchList.SimpleComic"
              ],
              "file_paths": [
                "/Applications/Simple Comic.app/Contents/MacOS/Simple Comic"
              ]
            }
          ],
          "type": "basic",
          "from": {
            "key_code": "z",
            "modifiers": {
              "optional": [
                "caps_lock"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_arrow"
            }
          ]
        },
        {
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "com.ToWatchList.SimpleComic"
              ],
              "file_paths": [
                "/Applications/Simple Comic.app/Contents/MacOS/Simple Comic"
              ]
            }
          ],
          "type": "basic",
          "from": {
            "key_code": "x",
            "modifiers": {
              "optional": [
                "caps_lock"
              ]
            }
          },
          "to": [
            {
              "key_code": "right_arrow"
            }
          ]
        },
        {
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "com.ToWatchList.SimpleComic"
              ],
              "file_paths": [
                "/Applications/Simple Comic.app/Contents/MacOS/Simple Comic"
              ]
            }
          ],
          "type": "basic",
          "from": {
            "key_code": "spacebar",
            "modifiers": {
              "optional": [
                "caps_lock"
              ]
            }
          },
          "to": [
            {
              "key_code": "page_down"
            }
          ]
        },
        {
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "com.ToWatchList.SimpleComic"
              ],
              "file_paths": [
                "/Applications/Simple Comic.app/Contents/MacOS/Simple Comic"
              ]
            }
          ],
          "type": "basic",
          "from": {
            "key_code": "down_arrow",
            "modifiers": {
              "optional": [
                "caps_lock"
              ]
            }
          },
          "to": [
            {
              "key_code": "page_down"
            }
          ]
        },
        {
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "com.ToWatchList.SimpleComic"
              ],
              "file_paths": [
                "/Applications/Simple Comic.app/Contents/MacOS/Simple Comic"
              ]
            }
          ],
          "type": "basic",
          "from": {
            "key_code": "up_arrow",
            "modifiers": {
              "optional": [
                "caps_lock"
              ]
            }
          },
          "to": [
            {
              "key_code": "page_up"
            }
          ]
        }
      ]
    }
  ]
}
